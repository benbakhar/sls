{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "strictNullChecks": false,
    "allowJs": true,
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "bin/**/*",
    "lib/**/*"
  ]
}